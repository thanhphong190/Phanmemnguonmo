<?xml version="1.0" encoding="utf-8"?>
<updates>
    <update>
        <name>VM Framework Loader during Plugin Updates</name>
        <description>Makes sure the VirtueMart framework is loaded during automatic plugin updates using Joomla's plugin updater.</description>
        <type>plugin</type>
        <folder>system</folder>
        <element>vmLoaderPluginUpdate</element>
        <version>3.2.8</version>
        <client>1</client>
        <infourl title="Use the AIO (All in once) installer to update this plugin ">https://docs.virtuemart.net/tutorials/installation-migration-upgrade/226-update-single-plugin-delivered-by-aio.html</infourl>
        <downloads>
            <!--downloadurl type="full" format="zip">http://dev.virtuemart.net/attachments/download/XXX/plg_vmpayment_paypal.3.2.8.zip</downloadurl-->
        </downloads>

        <maintainer>The VirtueMart Team</maintainer>
        <maintainerurl>https://virtuemart.net</maintainerurl>
        <targetplatform name="joomla" version=".*" />
    </update>
</updates>